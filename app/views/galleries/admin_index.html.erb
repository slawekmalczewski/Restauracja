<p id="notice"><%= notice %></p>

<div class="container-fluid">

  <div class="row">
    <div class="col-md-12">
      <h1>Galerie</h1>
    </div>
  </div>

  <div class="row mb-4 mt-4">
    <div class="col-md-2">
      <%= link_to 'Wstecz', {:controller => 'admins', :action => "index"}, class: 'btn btn-block btn-danger' %>
    </div>
    <div class="col-md-3">
      <%= link_to 'Dodaj Galerie', new_gallery_path, class: 'btn btn-block btn-info' %>
    </div>
    <div class="col-md-3">
      <%= link_to("Admin Panel", {:controller => 'admins', :action => 'index'}, class: 'btn btn-block btn-warning') %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 table-responsive-md">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Nazwa</th>
            <th scope="col">Opis</th>
            <th scope="col">Ilosc Zdjec</th>
            <th scope="col">Opcje</th>
          </tr>
        </thead>
        <tbody>
          <% @galleries.each do |gal| %>
          <tr>
            <td class="col-md-2"><%= gal.title %></td>
            <td class="col-md-2"><%= gal.description %></td>
            <td class="col-md-2"><%= gal.photos.count %></td>
            <td class="col-md-1"><%= link_to 'Pokaz', gal, :"data-turbolinks" => false %></td>
            <td class="col-md-1"><%= link_to 'Edytuj', edit_gallery_path(gal) %></td>
            <td class="col-md-1"><%= link_to 'Usun', gal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td class="col-md-1"><%= link_to("Zdjecia", {:controller => 'photos', :action => 'index', :id_gal => gal.id}) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

    <div class="row">
      <div class="col-md-12" style="height:300px;">
        <!-- dummy spacer to keep footer down -->
      </div>
    </div>

</div>
