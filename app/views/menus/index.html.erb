<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>Lista Menu</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
      <%= link_to 'New Menu', new_menu_path %>
    </div>
    <div class="col-md-4">

    </div>
  </div>

  <div class="row">
    <div class="col-md-12 table-responsive-md">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Nazwa</th>
            <th scope="col">Start</th>
            <th scope="col">Koniec</th>
            <th scope="col">Opcje</th>
          </tr>
        </thead>
        <tbody>
          <% @menus.each do |menu| %>
          <tr>
            <td class="col-md-3"><%= menu.name %></td>
            <td class="col-md-3"><%= menu.start_date %></td>
            <td class="col-md-3"><%= menu.end_date %></td>
            <td class="col-md-1"><%= link_to 'Pokaz', menu %></td>
            <td class="col-md-1"><%= link_to 'Edytuj', edit_menu_path(menu) %></td>
            <td class="col-md-1"><%= link_to 'Usun', menu, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

    <div class="row">
      <div class="col-md-12" style="height:300px;">
        <!-- dummy spacer to keep footer down -->
      </div>
    </div>

</div>
