<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>Uaktualnij potrawy</h1>
      <h3 class="lead">Lista potraw ktore nie zostaly uaktualnione przez ostatnie 60 dni</h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">
      <%= link_to 'Home', home_path %>
    </div>
    <div class="col-md-4">

    </div>
  </div>

  <div class="row">
    <div class="col-md-12 table-responsive-md">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">Nazwa</th>
            <th scope="col">Waga/ilosc</th>
            <th scope="col">Jednostka</th>
            <th scope="col">Cena</th>
            <th scope="col">Ostatnio Zaktualizowane</th>
            <th scope="col">Opcje</th>
          </tr>
        </thead>
        <tbody>
          <% Dish.dish_price_older_than_two_months.each do |food| %>
          <tr>
            <td class="col-md-2"><%= food.name %></td>
            <td class="col-md-2"><%= food.weight %></td>
            <td class="col-md-1"><%= food.weight_unit %></td>
            <td class="col-md-1"><%= food.price %></td>
            <td class="col-md-1"><%= food.updated_at %></td>
            <td class="col-md-1"><%= link_to 'Pokaz', food %></td>
            <td class="col-md-1"><%= link_to 'Edytuj', edit_dish_path(food) %></td>
            <td class="col-md-1"><%= link_to 'Usun', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

    <div class="row">
      <div class="col-md-12" style="height:300px;">
        <!-- dummy spacer to keep footer down -->
      </div>
    </div>

</div>
