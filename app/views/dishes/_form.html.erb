  <div class="col-4">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  <div class="col-4">
    <%= form.label :weight %>
    <%= form.text_field :weight %>
  </div>
  <div class="col-4">
    <%= form.label :weight_unit %>
    <%= form.text_field :weight_unit %>
  </div>
</div>



