<div class="wholebackground">

<div id="carousel" class="carousel slide" data-ride="carousel">
   <ol class="carousel-indicators">
     <li data-target="#carousel" data-slide-to="0" class="active"></li>
     <li data-target="#carousel" data-slide-to="1"></li>
     <li data-target="#carousel" data-slide-to="2"></li>
   </ol>
   <div class="carousel-inner" role="listbox">
     <div class="carousel-item active">
       <% z = Gallery.losowe_zdjecie_z_galerii %>
       <%= image_tag(z.photo_file, class: "image_opacity_changed") %>
       <div class="container">
         <div class="carousel-caption d-none d-md-block text-left">
           <h1><%= z.title %></h1>
           <p><%= z.description.html_safe %></p>
         </div>
       </div>
     </div>
     <div class="carousel-item">
       <% y = Blog.najnowszy_opublikowany_artykul %>
       <%= image_tag(y.main_poster, class: "image_opacity_changed") %>
       <div class="container">
         <div class="carousel-caption d-none d-md-block">
           <h1><%= y.title %></h1>
           <p><%= truncate(strip_tags(y.body.to_s), length: 60, omission: "(...)") %></p>
           <p><%= link_to("Zobacz", {:controller => 'blogs', :action => 'show', :id => y.id}, class: 'btn btn-lg btn-primary') %></p>
         </div>
       </div>
     </div>
     <div class="carousel-item">
       <% x = Photo.najnowsze_dodane_zdjecie %>
       <%= image_tag(x.photo_file, class: "image_opacity_changed") %>
       <div class="container">
         <div class="carousel-caption d-none d-md-block text-right">
           <h1>Nowe zdjecie w naszej galerii: <%= x.gallery.title %></h1>
           <p><%= x.description.html_safe %></p>
            <p><%= link_to("Zobacz", {:controller => 'galleries', :action => 'show', :id => x.gallery_id}, class: 'btn btn-lg btn-primary') %></p>
         </div>
       </div>
     </div>
   </div>
   <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
     <span class="carousel-control-prev-icon" aria-hidden="true"></span>
     <span class="sr-only">Previous</span>
   </a>
   <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
     <span class="carousel-control-next-icon" aria-hidden="true"></span>
     <span class="sr-only">Next</span>
   </a>
 </div>


